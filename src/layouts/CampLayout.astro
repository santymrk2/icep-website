---
import "../styles/global.css";
import '@fontsource/merriweather';
import '@fontsource-variable/noto-sans';
import '@fontsource/press-start-2p';
import '@fontsource/luckiest-guy';
import '@fontsource/monofett';
// Supports weights 200-700
import '@fontsource-variable/oswald';
// Supports weights 100-900
import '@fontsource-variable/montserrat';
// Supports weights 100-900
import '@fontsource-variable/outfit';

import '@fontsource/anton';


import Footer from '../components/Footer.astro';
import Header from '../components/camps/2025/Header.jsx';

interface Props {
  title: string;
  description?: string;
}

const currentPath = Astro.url.pathname;

const { title, description = "Iglesia Cristiana Evang√©lica en Pilar - Sitio Oficial" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/LogoWhite.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-green-800 text-white">
    <Header client:visible location={currentPath}/>
    <slot />
    <Footer />
  </body>
</html>