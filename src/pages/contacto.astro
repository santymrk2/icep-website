---
import Layout from "../layouts/Layout.astro";
export const prerender = true;
---

<Layout title="Contacto | ICEP">
  <!-- Seccion Direcccion -->
  <section
    class="py-16 mx-4 my-16 sm:mx-10 rounded-xl flex flex-col justify-center"
  >
    <div
      class="flex flex-col md:flex-row gap-6 lg:gap-24 m-2 md:items-center max-w-screen mx-auto"
    >
      <!-- Contenedor del texto (Aparece arriba en móviles, a la derecha en desktop) -->
      <div
        class="flex flex-col justify-center items-start max-w-8xl mx-auto order-2 md:order-1 text-left md:text-right"
      >
        <div class="text-left mb-12 mx-4">
          <h1 class="text-4xl font-bold font-sans md:text-right">
            Visitanos en nuestra iglesia
          </h1>
          <p class="text-gray-400 font-serif mt-3 md:text-right"></p>
        </div>
        <div>
          <a href="https://maps.app.goo.gl/TEdvqX2pNJz34sfn8">
            <div class="flex flex-row gap-4 justify-center items-center">
              <div class="order-2 md:order-1">
                <h3 class="text-lg font-medium text-white text-left md:text-right">
                  Dirección
                </h3>
                <p class="text-gray-400 font-serif text-left md:text-right">
                  Av. Dr. Honorio Pueyrredón 2775, <br />
                  Pilar, Buenos Aires
                </p>
              </div>

              <div class="order-1 md:order-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  class="size-16 fill-white"
                >
                  <path
                    fill-rule="evenodd"
                    d="m11.54 22.351.07.04.028.016a.76.76 0 0 0 .723 0l.028-.015.071-.041a16.975 16.975 0 0 0 1.144-.742 19.58 19.58 0 0 0 2.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 0 0-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 0 0 2.682 2.282 16.975 16.975 0 0 0 1.145.742ZM12 13.5a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"
                  ></path>
                </svg>
              </div>
            </div>
          </a>
        </div>
      </div>

      <!-- Contenedor del mapa (Aparece abajo en móviles, a la izquierda en desktop) -->
      <div class="order-2 md:order-2 flex justify-center w-full animate-float relative">
        <!-- Esqueleto de carga -->
        <div 
          id="skeleton"
          class="absolute inset-0 bg-zinc-700 rounded-lg animate-pulse"
          style="height: 450px;"
        ></div>
      
        <!-- Mapa -->
        <div class="aspect-w-16 aspect-h-9 w-full max-w-xl mx-auto">
          <iframe
            id="mapIframe"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3290.8116776545207!2d-58.9129872!3d-34.4587799!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bc9d0a8b6bea3b%3A0x8f6a1a0b5f8c0a0e!2sAv.%20Dr.%20Honorio%20Pueyrred%C3%B3n%202775%2C%20B1631FZJ%20Pilar%2C%20Provincia%20de%20Buenos%20Aires!5e0!3m2!1ses!2sar!4v1625147200000!5m2!1ses!2sar"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            class="rounded-lg shadow-lg opacity-0 transition-opacity duration-300"
            onload="this.classList.remove('opacity-0'); document.getElementById('skeleton').remove()"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- Seccion Youtube -->
  <section
    class="py-16 mx-4 my-16 sm:mx-10 rounded-xl flex flex-col justify-center"
  >
    <div
      class="flex flex-col md:flex-row gap-8 sm:gap-10 lg:gap-24 m-2 md:items-center max-w-screen-lg mx-auto"
    >
      <!-- Contenedor del texto (Aparece arriba en móviles, a la derecha en desktop) -->
      <div
        class="flex flex-col justify-center items-start max-w-7xl mx-auto order-1 md:order-2 text-left md:text-left"
      >
        <div class="text-left mb-12 mx-4">
          <h1 class="text-4xl font-bold font-sans">
            Miranos en nuestro Youtube
          </h1>
          <p class="text-gray-400 mt-3 font-serif">
            Tambien podes acceder a nuestras reuniones en vivo a través de
            nuestro canal de Youtube
          </p>
        </div>
        <div class="px-3">
          <a href="https://www.youtube.com/@icepilar">
            <div class="flex flex-row gap-4 justify-center items-center">
              <div class="">
                <svg class="size-12 fill-white" fill="" viewBox="0 0 24 24">
                  <path
                    d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                  ></path>
                </svg>
              </div>
              <div class="">
                <h3 class="text-lg font-medium text-white text-left">
                  Youtube
                </h3>
                <p class="text-gray-400 text-left font-serif">@icepilar</p>
              </div>
            </div>
          </a>
        </div>
      </div>

      <div class="order-1 md:order-1 flex justify-center w-full animate-float relative">
        <!-- Esqueleto de carga -->
        <div 
          id="youtube-skeleton"
          class="absolute inset-0 bg-zinc-700 rounded-lg animate-pulse"
          style="height: 450px;"
        ></div>
      
        <!-- Video de YouTube -->
        <div class="aspect-w-16 aspect-h-9 w-full max-w-xl mx-auto">
          <iframe
            id="youtubeIframe"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            class="rounded-lg shadow-lg opacity-0 transition-opacity duration-300"
            src="https://www.youtube.com/embed/b2eudGDe5J8?si=ZOhH9lo7IFMduJAJ"
            title="YouTube video player"
            allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            referrerpolicy="strict-origin-when-cross-origin"
            onload="this.classList.remove('opacity-0'); document.getElementById('youtube-skeleton').remove()"
          ></iframe>
        </div>
      </div>
      
    </div>
  </section>

    <!-- Seccion Redes -->
  <section
    class="py-16 mx-4 my-16 sm:mx-10 rounded-xl flex flex-col justify-center"
  >
    <div
      class="flex flex-col md:flex-row sm:gap-10 lg:gap-24 m-2 md:items-center max-w-screen-lg mx-auto"
    >
      <div
        class="flex flex-col justify-center items-start max-w-7xl mx-auto order-2 md:order-1 text-left md:text-right"
      >
        <div class="text-left mb-12 mx-4">
          <h1 class="text-4xl font-bold font-sans md:text-right">
            Escribinos en nuestras redes
          </h1>
          <p class="text-gray-400 font-serif mt-3 md:text-right">
            Nos podes escribir por mensaje directo o enviarnos un email para que
            podamos ayudarte
          </p>
        </div>
      </div>

      <div class="order-2 md:order-2 flex justify-center w-full animate-float">
        <div class="aspect-w-16 aspect-h-9 w-full max-w-xl mx-auto">
          <div class="">
            <div class="shadow-lg rounded-xl p-12 ring ring-1 ring-white">
              <div
                class="grid grid-cols-1 sm:grid-cols-2 justify-items-center items-content-center gap-8"
              >
                <a
                  href="mailto:info@icepilar.org"
                  class="m-4 group hover:text-white hover:scale-105 transform transition-all duration-300 ease-in-out"
                >
                  <div class="flex flex-col justify-center items-center w-40">
                    <div class="">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        class="size-12 group-hover:fill-gray-300 fill-white"
                      >
                        <path
                          d="M1.5 8.67v8.58a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3V8.67l-8.928 5.493a3 3 0 0 1-3.144 0L1.5 8.67Z"
                        ></path>
                        <path
                          d="M22.5 6.908V6.75a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3v.158l9.714 5.978a1.5 1.5 0 0 0 1.572 0L22.5 6.908Z"
                        ></path>
                      </svg>
                    </div>
                    <div class="mt-3">
                      <h3
                        class="text-lg font-medium group-hover:text-gray-300 text-white text-center"
                      >
                        Email
                      </h3>
                      <p
                        class="group-hover:text-gray-500 text-gray-400 text-center"
                      >
                        info@icepilar.org
                      </p>
                    </div>
                  </div>
                </a>

                <a
                  href="https://es-la.facebook.com/"
                  class="m-4 group hover:text-white hover:scale-105 transform transition-all duration-300 ease-in-out"
                >
                  <div class="flex flex-col justify-center items-center w-40">
                    <div class="flex-shrink-0">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="size-12 group-hover:fill-gray-300 fill-white"
                        viewBox="-5 0 20 20"
                        ><path
                          d="M6.821 20v-9h2.733L10 7H6.821V5.052C6.821 4.022 6.848 3 8.287 3h1.458V.14c0-.043-1.253-.14-2.52-.14C4.58 0 2.924 1.657 2.924 4.7V7H0v4h2.923v9h3.898Z"
                        ></path>
                      </svg>
                    </div>
                    <div class="mt-3">
                      <h3 class="text-lg font-medium group-hover:text-gray-300 text-white text-center">
                        Facebook
                      </h3>
                      <p class="group-hover:text-gray-500 text-gray-400 text-center">@icepilar</p>
                    </div>
                  </div>
                </a>

                <a
                  href="/"
                  class="m-4 group hover:text-white hover:scale-105 transform transition-all duration-300 ease-in-out"
                >
                  <div class="flex flex-col justify-center items-center w-40">
                    <div class="flex-shrink-0">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="size-12 group-hover:fill-gray-300 fill-white"
                        viewBox="0 0 32 32"
                        ><path
                          d="M16.656 1.029c1.637-.025 3.262-.012 4.886-.025a7.762 7.762 0 0 0 2.189 5.213l-.002-.002A8.77 8.77 0 0 0 29 8.45l.028.002v5.036a13.327 13.327 0 0 1-5.331-1.247l.082.034a15.385 15.385 0 0 1-2.077-1.196l.052.034c-.012 3.649.012 7.298-.025 10.934a9.513 9.513 0 0 1-1.707 4.954l.02-.031c-1.652 2.366-4.328 3.919-7.371 4.011h-.014a9.071 9.071 0 0 1-5.139-1.31l.04.023C5.05 28.185 3.32 25.603 3 22.6l-.004-.041a23.163 23.163 0 0 1-.012-1.862c.49-4.779 4.494-8.476 9.361-8.476.547 0 1.083.047 1.604.136l-.056-.008c.025 1.849-.05 3.699-.05 5.548a4.29 4.29 0 0 0-5.465 2.619l-.009.03c-.133.427-.21.918-.21 1.426 0 .206.013.41.037.61l-.002-.024a4.26 4.26 0 0 0 4.382 3.586h-.009a4.198 4.198 0 0 0 3.451-1.994l.01-.018c.267-.372.45-.822.511-1.311l.001-.014c.125-2.237.075-4.461.087-6.698.012-5.036-.012-10.06.025-15.083z"
                        ></path></svg
                      >
                    </div>
                    <div class="mt-3">
                      <h3 class="text-lg font-medium group-hover:text-gray-300 text-white text-center">
                        TikTok
                      </h3>
                      <p class="group-hover:text-gray-500 text-gray-400 text-center">@icepilar</p>
                    </div>
                  </div>
                </a>

                <a
                  href="https://www.instagram.com/ice_pilar?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw=="
                  class="m-4 group hover:text-white hover:scale-105 transform transition-all duration-300 ease-in-out"
                >
                  <div class="flex flex-col justify-center items-center w-40">
                    <div class="0">
                      <svg class="size-12 group-hover:fill-gray-300 fill-white" viewBox="0 0 24 24"
                        ><path fill="none" d="M0 0h24v24H0z"></path>
                        <path
                          d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153a4.908 4.908 0 0 1 1.153 1.772c.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 0 1-1.153 1.772 4.915 4.915 0 0 1-1.772 1.153c-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 0 1-1.772-1.153 4.904 4.904 0 0 1-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 0 1 1.153-1.772A4.897 4.897 0 0 1 5.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 5a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm6.5-.25a1.25 1.25 0 0 0-2.5 0 1.25 1.25 0 0 0 2.5 0zM12 9a3 3 0 1 1 0 6 3 3 0 0 1 0-6z"
                        ></path>
                      </svg>
                    </div>
                    <div class="mt-3">
                      <h3 class="text-lg font-medium group-hover:text-gray-300 text-white text-center">
                        Instagram
                      </h3>
                      <p class="group-hover:text-gray-500 text-gray-400 text-center">@ice_pilar</p>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
