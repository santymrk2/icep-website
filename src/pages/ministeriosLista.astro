---
import Layout from "../layouts/Layout.astro";
import Paths from "../data/routingPaths.js"

const minItems = Paths.filter(x => x.text=="Ministerios")[0].subitems;

export const prerender = false;
---

<Layout title="ICEP | Ministerios">
  <section class="my-4">
    { minItems?.map((min, index) => (
      <div class="flex flex-col justify-center shadow-lg rounded-xl bg-white m-6 sm:m-10 gap-4">
        <a class="text-3xl font-bold text-center text-black py-6" href={min.href}>
          {min.text}
        </a>
      </div>
    ))}
  </section>


</Layout>
