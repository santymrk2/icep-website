---
import { Image } from "astro:assets";
import CampLayout from "../../../layouts/CampLayout.astro";
import CampPH01 from "../../../assets/camps/2025/CampPH01.webp";
import Countdown from "../../../components/camps/2025/Countdown.jsx";

const targetDate = new Date(
  new Date().getFullYear(),
  2,
  1,
  8,
  0,
  0,
).toISOString();
---

<CampLayout title="ICEP | Campamento de iglesia 2025">
  <main>
    <section class="mb-28 motion-preset-slide-right ">
      <Countdown client:idle targetDate={targetDate} />
    </section>

    <section class="w-full h-full sm:h-screen overflow-hidden motion-preset-fade">
      <div class="relative h-150 sm:h-full">
        <Image
          src={CampPH01}
          alt="Imagen de personas"
          class="w-full h-full object-cover drop-shadow-3xl brightness-50"
        />
        <div class="absolute top-1/2 right-10 sm:right-32 md:right-64">
          <div class="text-center">
            <h2
              class="text-4xl md:text-5xl font-big-camp font-extrabold text-center sm:text-right"
            >
              ¿Estás listo?
            </h2>
          </div>
        </div>
      </div>
    </section>

    <section class="flex flex-col justify-center items-center gap-8 h-screen">
      <div
        class="flex flex-col gap-4 justify-center items-center p-4 rounded-lg font-sans-camp motion-preset-slide-right delay-100 "
      >
        <h1 class="text-2xl font-black mb-4">Ubicacion del predio</h1>

        <a href="https://maps.app.goo.gl/QtDsD1iwcE3NGKea9">
          <div
            class="flex flex-row gap-4 justify-center items-center bg-white p-4 rounded-lg font-sans-camp text-green-800"
          >
            <div class="order-2 md:order-1">
              <h3 class="text-lg font-medium text-left md:text-right">
                Villa Don Bosco
              </h3>
              <p class="text-gray-400 font-sans-camp text-left md:text-right">
                Av. Don Bosco 2627, <br />
                Tandil, Buenos Aires
              </p>
            </div>

            <div class="order-1 md:order-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                class="size-16 fill-green-800"
              >
                <path
                  fill-rule="evenodd"
                  d="m11.54 22.351.07.04.028.016a.76.76 0 0 0 .723 0l.028-.015.071-.041a16.975 16.975 0 0 0 1.144-.742 19.58 19.58 0 0 0 2.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 0 0-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 0 0 2.682 2.282 16.975 16.975 0 0 0 1.145.742ZM12 13.5a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"
                ></path>
              </svg>
            </div>
          </div>
        </a>
      </div>

      <div
        class="flex flex-col gap-4 justify-center items-center p-4 rounded-lg font-sans-camp motion-preset-slide-left "
      >
        <h1 class="text-2xl font-black mb-4">Nuestra playlist para el viaje</h1>
        <a
          href="https://open.spotify.com/playlist/0OQJKpnrOnlqE9iiHXRqYN?si=92d6396157b14557"
        >
          <div
            class="w-64 p-4 px-8 flex flex-row gap-4 justify-between items-center bg-white p-4 rounded-lg font-sans-camp text-green-800"
          >
            <div class="order-2 md:order-1">
              <h3 class="text-lg font-medium mx-4 text-left md:text-right">
                Spotify
              </h3>
            </div>

            <div class="order-1 md:order-2">
              <svg
                class="size-16 fill-green-800"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M15.915 8.865c-3.223-1.914-8.54-2.09-11.618-1.156-.494.149-1.016-.129-1.166-.624-.15-.494.129-1.016.623-1.166 3.533-1.073 9.405-.866 13.116 1.337.444.264.59.838.326 1.282-.262.444-.838.591-1.281.327ZM15.81 11.7c-.226.367-.706.482-1.073.257-2.687-1.652-6.785-2.13-9.964-1.165-.413.124-.848-.108-.973-.52-.124-.412.108-.847.52-.972 3.631-1.102 8.146-.568 11.233 1.329.367.225.482.705.257 1.071Zm-1.224 2.723c-.18.294-.563.387-.857.207-2.348-1.435-5.304-1.759-8.785-.964-.335.077-.67-.133-.746-.469-.077-.335.132-.669.469-.746 3.809-.871 7.076-.496 9.712 1.115.294.18.387.563.207.857ZM10 0C4.477 0 0 4.477 0 10s4.477 10 10 10 10-4.477 10-10C20 4.478 15.523.001 10 .001V0Z"
                  fill-rule="evenodd"></path>
              </svg>
            </div>
          </div>
        </a>

        <a
          href="https://music.youtube.com/playlist?list=PLC313ihg4qMJZgYgv9c_20sBzTYOEYrmN&si=YNL82tPvOLssN55x"
        >
          <div
            class="w-64 p-4 px-8 flex flex-row gap-4 justify-between items-center bg-white rounded-lg font-sans-camp text-green-800"
          >
            <div class="order-2 md:order-1">
              <h3 class="text-lg font-medium mx-4 text-left md:text-right">
                Youtube <br /> Music
              </h3>
            </div>

            <div class="order-1 md:order-2">
              <svg
                class="size-16 fill-green-800"
                viewBox="0 0 100 100"
                xml:space="preserve"
                xmlns="http://www.w3.org/2000/svg"
              >
                <g id="Layer_2">
                  <path
                    class="st95"
                    d="M50 2.5C23.766 2.5 2.5 23.823 2.5 50.126c2.502 63.175 92.507 63.157 95-.001C97.5 23.823 76.233 2.5 50 2.5zm0 74.899c-15.036 0-27.27-12.233-27.27-27.27.74-18.662 14.654-27.134 27.269-27.134h.002c12.616.001 26.531 8.473 27.267 27.073C77.27 65.167 65.036 77.399 50 77.399z"
                  ></path>
                  <path
                    class="st95"
                    d="M50.002 26.103c-15.946-.001-23.704 12.486-24.165 24.088.001 13.262 10.84 24.101 24.163 24.101S74.162 63.453 74.162 50.13c-.457-11.539-8.214-24.025-24.16-24.027z"
                  ></path>
                  <path
                    d="M41.055 52.528c-.001 2.575.001 7.867 0 10.46l21.802-13.417-21.802-12.299v15.256z"
                    style="fill:#f1f1f1"></path>
                </g>
              </svg>
            </div>
          </div>
        </a>
      </div>
    </section>
  </main>
</CampLayout>
