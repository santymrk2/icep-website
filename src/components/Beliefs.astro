---
const accordionData = [
  { title: "Item 1", content: "Contenido del acordeón 1" },
  { title: "Item 2", content: "Contenido del acordeón 2" },
  { title: "Item 3", content: "Contenido del acordeón 3" },
  { title: "Item 4", content: "Contenido del acordeón 4" },
  { title: "Item 5", content: "Contenido del acordeón 5" },
];
let activeIndex = -1;

function toggleAccordion(index) {
  activeIndex = activeIndex === index ? -1 : index;
}
---

<section class="w-full max-w-lg mx-auto p-6 bg-white shadow-lg rounded-md">
  <h1 class="text-2xl font-bold text-gray-800 mb-4">Lorem Ipsum</h1>
  <p class="text-gray-600 mb-6">
    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
  </p>

  <div class="space-y-4">
    {accordionData.map((item, index) => (
      <div class="border-b border-gray-300 pb-2">
        <button
          class="w-full flex justify-between items-center text-left text-gray-800 font-medium py-2 focus:outline-none"
          onClick={() => toggleAccordion(index)}
        >
          {item.title}
          <span
            class={`transform transition-transform ${
              activeIndex === index ? "rotate-180" : "rotate-0"
            }`}
          >
            ➕
          </span>
        </button>
        <div
          class={`overflow-hidden transition-all duration-300 ${
            activeIndex === index ? "max-h-40" : "max-h-0"
          }`}
        >
          <p class="text-gray-600 mt-2">{item.content}</p>
        </div>
      </div>
    ))}
  </div>
</section>
