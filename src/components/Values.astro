];
---

<section class="container flex-grow w-full py-4 sm:py-16 mx-auto overflow-hidden relative">
    <h1
        class="text-center text-3xl mb-4 uppercase bg-white text-gray-700 mx-auto"
    >
        Nuestros valores
    </h1>
    <div class="mx-auto w-full">
        <div class="container my-8 relative">
            <!-- Degradados a los extremos -->
            <div class="absolute inset-y-0 left-0 w-12 bg-gradient-to-r from-white to-transparent pointer-events-none"></div>
            <div class="absolute inset-y-0 right-0 w-12 bg-gradient-to-l from-white to-transparent pointer-events-none"></div>

            <div
                id="scrollContainer"
                class="flex overflow-x-scroll scrolling-touch items-start p-20 no-scrollbar"
            >
                {
                    listValues.map((value) => (
                        <div class="flex-none h-60 w-6/12 mr-8 md:p-4 shadow-custom-blue rounded-xl">
                            <a href="#" class="space-y-4">
                                <div class="px-8 py-6">
                                    <div class="text-lg leading-6 font-medium space-y-1">
                                        <h3 class="font-bold text-gray-800 text-normal mb-2">
                                            {value.title}
                                        </h3>
                                    </div>
                                    <div class="">
                                        <p class="text-base">
                                            {value.description}
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
